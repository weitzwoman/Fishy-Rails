<h2><%= @product.name %></h2>
<br>
<div class="product-image">
  <img src="<%= @product.image %>" alt="" />
</div>
<h3>PRODUCT INFORMATION</h3>
<h4>Price: <%= number_to_currency(@product.price) %></h4>
<h4>Description: <%= @product.description %></h4>
<br>
<%= link_to "Edit Product", edit_user_product_path(@product), class: "btn" %>
<%= link_to "Delete Product", user_product_path(@product), :data => {:confirm => "Are you sure?", :method => "delete"}, class: "btn" %>
