<h1>All Product Inventory</h1>
<% if current_user && current_user.admin? %>
  <%= link_to "Add New Product", new_product_path, class: "btn" %>
<% end %>

<ul class="well">
  <% @products.each do |product| %>
    <li><h4>
      <%= link_to product.name, product_path(product) %>
    </h4></li>
  <% end %>
</ul>
